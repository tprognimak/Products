@using Products.DAL.Model
@model Products.DAL.Model.Product

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<div class="modal-content">
    <div class="modal-body">
        <h3>Новый елемент списка</h3>
    </div>

    <div class="modal-body">
        @using (Html.BeginForm())
            {
            @Html.LabelFor(model => model.Name, "Название")
            <br />
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { required = "required" } })
            @Html.ValidationMessageFor(model => model.Name)
            <br /><br />
                @Html.LabelFor(model => model.Quantity, "Количество")
                <br />
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { required = "required" } })
                <br /><br />
                @Html.LabelFor(model => model.Price, "Закупочная цена")
                <br />
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { required = "required" } })
                @Html.ValidationMessageFor(model => model.Price)
                <br /><br />
                @Html.LabelFor(model => model.Category, "Категория")
                <br />
                @Html.DropDownListFor(m => m.Category,
                    new SelectList(Category.category)
                    )
                <br /><br />
                <input type="submit" class="btn btn-default btn-sm" value="Добавить" />
                <a href="Index" type="button" class="btn btn-warning btn-sm btn-submit" data-dismiss="modal">Назад</a>
        }
    </div>
</div>
